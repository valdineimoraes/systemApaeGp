<% provide(:page_title, "Atividade ##{@activity.id}") %>

<div class="card card-profile">
  <div class="card-body text-center">
    <h2 class="mb-5"><%= @activity.name %></h2>
    <p class="mb-5">Descrição: <%= @activity.description %></p>
    <p class="mb-5">Link: <%= link_to @activity.website_address, @activity.website_address, target: '_blank'  %></p>
    <%= render 'activity_professors' %>
  </div>
</div>
<div class="d-flex">
  <%= link_to "Voltar", activities_path, class: 'btn btn-secondary' %>
</div>

