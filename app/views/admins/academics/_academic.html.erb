<tr>
  <td><%= academic.id %></td>
  <td><%= academic.name %></td>
  <td><%= academic.birth_date ? l(academic.birth_date, format: :long) : "Data nÃ£o cadastrada"  %></td>
  <td><%= academic.registration %></td>
  <td><%= academic.cod_sere %></td>

  <td>
    <%= link_to edit_admins_academic_path(academic) do %>
        <span class="icon mr-3">
            <i class="fas fa-edit" data-toggle="tooltip" data-placement="top" title="Editar"></i>
        </span>
    <% end %>

    <%= link_to [:admins, academic], method: :delete, data: { confirm: t('prompt.confirm') } do %>
        <span class="icon mr-3">
            <i class="fas fa-trash-alt" data-toggle="tooltip" data-placement="top" title="Remover"></i>
        </span>
    <% end %>
  </td>
</tr>
