<section id="services">
  <div class="container">
    <div class="row">
      <div class="col-lg-12 text-center">
        <hr class="my-4">
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-6 text-center">
        <%= link_to professors_path do %>
          <div class="service-box mt-5 mx-auto">
            <i class="fas fa-4x fa-chalkboard-teacher text-primary mb-3 sr-icon-1"></i>
            <h3 class="mb-3"><%= I18n.t('breadcrumbs.professors.name') %></h3>
          </div>
        <% end %>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <%= link_to companies_path do %>
          <div class="service-box mt-5 mx-auto">
            <i class="fas fa-4x fa-building text-primary mb-3 sr-icon-2"></i>
            <h3 class="mb-3"><%= I18n.t('breadcrumbs.companies.name') %></h3>
          </div>
        <% end %>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <%= link_to activities_path do %>
          <div class="service-box mt-5 mx-auto">
            <i class="fas fa-4x fa-book text-primary mb-3 sr-icon-3"></i>
            <h3 class="mb-3"><%= I18n.t('breadcrumbs.activities.name') %></h3>
          </div>
        <% end %>
      </div>

      <div class="col-lg-3 col-md-6 text-center">
        <%= link_to static_page_path('instruction_subscription') do %>
          <div class="service-box mt-5 mx-auto">
            <i class="fas fa-4x fa-tasks text-primary mb-3 sr-icon-4"></i>
            <h3 class="mb-3"><%= I18n.t('helpers.instruction_subscription') %></h3>
          </div>
        <% end %>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <%= link_to static_page_path('be_our_student') do %>
          <div class="service-box mt-5 mx-auto">
            <i class="fas fa-4x fa-user-check text-primary mb-3 sr-icon-4"></i>
            <h3 class="mb-3"><%= I18n.t('helpers.be_our_student') %></h3>
          </div>
        <% end %>
      </div>
      <div class="col-lg-3 col-md-6 text-center">
        <%= link_to static_page_path('course_about') do %>
          <div class="service-box mt-5 mx-auto">
            <i class="fas fa-4x fa-heart text-primary mb-3 sr-icon-4"></i>
            <h3 class="mb-3"><%= I18n.t('helpers.course_about') %></h3>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
